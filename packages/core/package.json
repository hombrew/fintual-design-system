{
  "name": "@repo/core",
  "version": "0.1.0",
  "description": "universal core defaults for components",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json",
    "./theme.css": "./lib/styles/theme.css",
    "./theme.native.css": "./lib/styles/theme.native.css"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "clean": "del-cli lib",
    "prepare": "pnpm run build",
    "build": "bob build && mkdir ./lib/styles && pnpm run build:styles",
    "build:styles": "pnpm run \"/build:styles:/\"",
    "build:styles:web": "node --experimental-strip-types ./src/scripts/generate-theme.ts",
    "build:styles:native": "node --experimental-strip-types ./src/scripts/generate-theme.native.ts",
    "check:types": "tsc",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hombrew/fintual-design-system.git"
  },
  "author": "Manuel Maldonado <mmaldonadortiz92@gmail.com> (https://github.com/hombrew)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hombrew/fintual-design-system/issues"
  },
  "homepage": "https://github.com/hombrew/fintual-design-system#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@react-native/babel-preset": "0.83.0",
    "@react-native/eslint-config": "0.83.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/react": "catalog:react",
    "del-cli": "^6.0.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "react": "catalog:react",
    "react-native": "catalog:react-native",
    "react-native-builder-bob": "^0.40.17",
    "release-it": "^19.0.4",
    "typescript": "catalog:workspace"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "tailwindcss": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.11.0",
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "create-react-native-library": {
    "type": "library",
    "languages": "js",
    "tools": [
      "release-it",
      "eslint"
    ],
    "version": "0.56.1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  }
}
