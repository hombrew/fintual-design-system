{
  "name": "@repo/core",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Manuel Maldonado",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsdx dev",
    "build": "tsdx build",
    "clean": "rm -rf ./node_modules && rm -rf ./.turbo && rm -rf ./dist",
    "check:lint": "eslint . --max-warnings 0",
    "check:types": "tsdx typecheck",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/node": "catalog:env",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "bunchee": "catalog:workspace",
    "eslint": "catalog:workspace",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "tsdx": "catalog:workspace",
    "typescript": "catalog:workspace"
  }
}
